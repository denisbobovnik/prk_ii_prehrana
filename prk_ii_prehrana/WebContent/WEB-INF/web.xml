<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>prk_ii_prehrana</display-name>
  <welcome-file-list>
  	<welcome-file>login.xhtml</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
 
  <servlet>
  	<servlet-name>Image Servlet</servlet-name>
  	<servlet-class>si.um.feri.prk.servleti.ImageServlet</servlet-class>
  </servlet>
   <servlet-mapping>
    <servlet-name>Image Servlet</servlet-name>
    <url-pattern>/faces/ImageServlet</url-pattern>
  </servlet-mapping>
	
  	<!--Defining security constraint for type of roles available-->   
   <security-constraint>
    <display-name>c01</display-name>
    <web-resource-collection>
      <web-resource-name>strokovnjak</web-resource-name>
      <url-pattern>/faces/objava-recepta.xhtml</url-pattern>
      <url-pattern>/faces/vnos-prehrane.xhtml</url-pattern>
      <http-method>POST</http-method>
      <http-method>GET</http-method>
      <http-method>PUT</http-method>
      <http-method>DELETE</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>STROKOVNJAK</role-name>
    </auth-constraint>
  </security-constraint>
  
    <security-constraint>
    <display-name>c01</display-name>
    <web-resource-collection>
      <web-resource-name>posameznik</web-resource-name>
      <url-pattern>/faces/objava-clanka.xhtml</url-pattern>
      <http-method>POST</http-method>
      <http-method>GET</http-method>
      <http-method>PUT</http-method>
      <http-method>DELETE</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>POSAMEZNIK</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-constraint>
  <display-name>c01</display-name>
    <web-resource-collection>
      <web-resource-name>login</web-resource-name>
      <url-pattern>/faces/login.xhtml</url-pattern>
      <http-method>POST</http-method>
      <http-method>GET</http-method>
      <http-method>PUT</http-method>
      <http-method>DELETE</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
	<!--Defining security constraint for type of roles available--> 

	<!--Defining type of authenitcation mechanism-->  
 	<login-config>
	  <auth-method>FORM</auth-method>
	  <realm-name>prk_ii_prehrana</realm-name>
	  <form-login-config>
	  	<form-login-page>/faces/login.xhtml</form-login-page>
	  	<form-error-page>/faces/error.xhtml</form-error-page>
	  </form-login-config>
	</login-config>
  <!--Defining type of authenitcation mechanism-->

  <!--Denining security role-->
  <security-role>
    <role-name>ADMINISTRATOR</role-name>
  </security-role> 
  <security-role>
    <role-name>STROKOVNJAK</role-name>
  </security-role>
  <security-role>
    <role-name>POSAMEZNIK</role-name>
  </security-role>
    <security-role>
    <role-name>readonly</role-name>
  </security-role>
  <!--Denining security role-->
</web-app>